{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "semi": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-template": "warn",
    "eqeqeq": "warn",
    "tailwindcss/no-custom-classname": "off"
  },
  "settings": {
    "tailwindcss": {
      "callees": ["clsx", "cn", "cva"],
      "classRegex": "^(class|\\w+Class)Name$"
    }
  },
  "ignorePatterns":["*.test.*"]
}
