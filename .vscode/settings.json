{
  "editor.formatOnSave": true,
  "explorer.sortOrder": "type",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll.eslint": "explicit"
  },
  "css.validate": false,
  "scss.validate": false,
  // file nesting
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".nvmrc, .npm*, bun.lockb",
    "*.js": "${capture}.js.map, ${capture}.*.js, ${capture}.d.ts",
    "*.ts": "${capture}.js.map, ${capture}.*.ts, ${capture}.*.js, ${capture}.d.ts",
    "*.tsx": "${capture}.*.tsx, ${capture}.*.ts, ${capture}.*.js"
  },
  // custom labels to easily navigate next.js app router
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "./app/**/{index}.{jsx,tsx}": "${dirname} - ${filename}",
    "./components/**/{index}.{jsx,tsx}": "${dirname} - ${filename}"
  },
  // tailwind support for cva and classNames
  "tailwindCSS.classAttributes": ["className", "\\w+ClassName"],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "typescript.tsdk": "node_modules\\typescript\\lib",
  // prettier-ignore
  "cSpell.words": [
    "envalid","hookform","inter","tailwindcss","webp","zod","pluggables"
  ]
}
